<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/img_loginback">


    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:lineSpacingMultiplier="2"
            android:minLines="1"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/textcolcr"
            android:text="极光抄码器"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/set_phone"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/login_phone"
            android:padding="10dp"
            android:background="@null"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColorHint="@color/white"
            android:hint="请输入账号/手机号"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/set_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/font_black_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/set_lpwd"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_loginpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/login_pwd"
            android:padding="10dp"
            android:background="@null"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:textColorHint="@color/white"
            android:hint="请输入密码"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/set_lpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/look_pwd"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/font_black_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_pwd"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_redradius"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp">

        <TextView
            android:elevation="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:id="@+id/login_sso"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_huisradius"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp">

        <TextView
            android:elevation="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:id="@+id/register_sso"
            android:text="注册"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_weixin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
