<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_shouye">


    <LinearLayout
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_backwhiteradioline"
        android:layout_centerHorizontal="true"

        android:layout_width="match_parent"
        android:layout_height="200dp">
       <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/text_time"
               android:textSize="17sp"
               android:textColor="@color/textcolcr"
               android:gravity="center"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:drawablePadding="10dp"
               android:text="2018-02-12"
               android:drawableLeft="@drawable/img_candler"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
             <RelativeLayout
                 android:id="@+id/real_more"
                 android:layout_alignParentRight="true"
                 android:layout_width="35dp"
                 android:layout_height="40dp">
           <ImageView
               android:layout_marginLeft="5dp"
               android:layout_centerVertical="true"
               android:id="@+id/img_more"
               android:src="@drawable/img_more"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
             </RelativeLayout>
       </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name"
        android:textColor="@color/textcolcr"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Hi, Sense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<View
    android:layout_marginTop="40dp"
    android:background="@color/back_bei"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_jieshao"
                android:padding="10dp"
                android:textColor="@color/textcolcr"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="软件简介"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_renwuradius"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <TextView
            android:elevation="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:id="@+id/shou_renwu"
            android:text="开始第一个任务"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
